# ===========================================
# Server Configuration
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# MongoDB Configuration
# ===========================================
# Option 1: MongoDB Atlas (Free Tier)
# Sign up at: https://www.mongodb.com/cloud/atlas
# Create a free cluster and get your connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/webmethods-scraper?retryWrites=true&w=majority

# Option 2: Local MongoDB Installation
# MONGODB_URI=mongodb://localhost:27017/webmethods-scraper

# ===========================================
# CORS Configuration
# ===========================================
# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# Scraping Configuration
# ===========================================
# Delay between requests in milliseconds (respect rate limits)
SCRAPE_DELAY_MIN=2000
SCRAPE_DELAY_MAX=5000

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=3

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Maximum retries for failed requests
MAX_RETRIES=3

# Enable/disable headless browser scraping (uses more resources)
USE_PUPPETEER=true

# ===========================================
# Scheduling Configuration
# ===========================================
# Cron schedule for automatic scraping
# Default: Every 6 hours (0 */6 * * *)
SCRAPE_CRON_SCHEDULE=0 */6 * * *

# Enable/disable automatic scraping
AUTO_SCRAPE_ENABLED=true

# ===========================================
# Logging Configuration
# ===========================================
# Log levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log file paths
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# ===========================================
# Rate Limiting
# ===========================================
# API rate limit: requests per window
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Content Settings
# ===========================================
# Maximum age of content in days before cleanup
CONTENT_MAX_AGE_DAYS=90

# Maximum items to store per category
MAX_ITEMS_PER_CATEGORY=500

# ===========================================
# Search Keywords
# ===========================================
# Primary search terms (comma-separated)
SEARCH_KEYWORDS=webMethods,Software AG webMethods,webMethods Integration,webMethods API Gateway,webMethods.io

# ===========================================
# Proxy Configuration (Optional)
# ===========================================
# Uncomment and configure if you need to use a proxy
# PROXY_HOST=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=