# ===========================================
# Frontend Environment Variables
# ===========================================

# VITE_ prefix is required for client-side environment variables in Vite
# See: https://vitejs.dev/guide/env-and-mode.html#env-variables

# Backend API URL
# This is used by Vite's proxy during development,
# and directly by the client in production build.
VITE_BACKEND_URL=http://localhost:5000

# ===========================================
# Application Settings
# ===========================================

# Default number of content items to fetch per page
VITE_DEFAULT_PAGE_LIMIT=20

# Default delay for UI interactions (e.g., debouncing search) in milliseconds
VITE_UI_DEBOUNCE_DELAY=300

# Default number of days for content cleanup when showing statistics or filters
VITE_DEFAULT_STAT_DAYS=7

# ===========================================
# Feature Flags
# ===========================================

# Enable/Disable a specific feature (e.g., dark mode toggle)
VITE_FEATURE_DARK_MODE_TOGGLE=true

# Enable/Disable a specific section (e.g., settings page)
VITE_FEATURE_SETTINGS_PAGE=true